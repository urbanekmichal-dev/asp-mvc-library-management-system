@model MVC_CRUD.Models.Domain.Book
@{
}

<style>
    .card img {
        max-width: 100%;
        object-fit: cover;
    }
</style>

<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">

<div class="container">
    <div class="card">
        <div class="card-body">
            <h3 class="card-title">@Model.Name</h3>
            <div class="row">
                <div class="col-lg-5 col-md-5 col-sm-6">
                    <div class="white-box text-center"><img src="@("/Image/"+Model.Image)" class="img-responsive"></div>
                </div>
                <div class="col-lg-7 col-md-7 col-sm-6">
                    <h4 class="box-title mt-5">Book description</h4>
                    <p> @Model.Description</p>
                    @if(@Model.Visible){
                        <button onclick="location.href='@Url.Action("AddReservation", "Reservation",new {id=@Model.BookId})'" class="btn btn-primary btn-rounded">Reserve</button>
                    }

                    <div class="table-responsive">
                        <h3 class="box-title mt-5">General Info</h3>
                        <table class="table table-striped table-product">
                            <tbody>
                                <tr>
                                    <td width="300">Author</td>
                                    <td>@Model.Author</td>
                                </tr>
                                <tr>
                                    <td width="300">Publisher</td>
                                    <td>@Model.Publisher</td>
                                </tr>
                                <tr>
                                    <td width="300">Published</td>
                                    <td>@Model.Published.ToString("dd-MM-yyyy")</td>
                                </tr>
                                <tr>
                                    <td width="300">Category</td>
                                    <td>@Model.Category</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

