@model MVC_CRUD.Models.LoginViewModel

@{
}

@if (!string.IsNullOrEmpty(ViewBag.Message))
{
    <script type="text/javascript">
        alert("@ViewBag.Message");
    </script>
}

<h1>Sign in</h1>
<form method="post" action="Signin" class="mt-5">

    <div class="form-group">
        <label for="login">Login</label>
        <input type="text" class="form-control" id="login" asp-for="Email">
    </div>
    <div class="form-group">
        <label for="password">Password</label>
        <input type="password" class="form-control" id="password" asp-for="Password">
    </div>

    <button type="submit" class="btn btn-primary">Login</button>
</form>

